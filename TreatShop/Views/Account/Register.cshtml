@{
  Layout = "_Layout";
}

@using TreatShop.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="form-group">
    @Html.TextBoxFor(user=> user.Email, new {@class= "form-control", placeholder = "Email", required = "required"})
  </div>
  <div class="form-group">
    @Html.PasswordFor(user=> user.Password, new {@class= "form-control", placeholder = "Password", required = "required"})
  </div>
  <div class="form-group">
    @Html.PasswordFor(user=> user.ConfirmPassword, new {@class= "form-control", placeholder = "Confirm Password", required = "required"})
  </div>
  <div class="form-group">
    <input type="submit" value="Register" class="btn btn-primary"/>
  </div>
}