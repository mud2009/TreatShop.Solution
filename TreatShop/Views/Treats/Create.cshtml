@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<h3>Add a new treat</h3>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class= "form-control", placeholder = "Name", required = "required"})
  </div>
  <div class="form-group">
    <input type="submit" value="Add treat" class="btn btn-primary">
  </div>
}

<p>@Html.ActionLink("Back to treats", "Index")</p>