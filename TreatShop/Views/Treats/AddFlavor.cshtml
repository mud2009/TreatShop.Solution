@{
  Layout = "_Layout";
}

@model TreatShop.Models.Treat

<h3>Add a flavor for @Html.DisplayFor(model => model.Name)</h3>

@if (@ViewBag.FlavorCount == 0)
{
  <h5>No flavors to add for this treat</h5>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)
    <div class="form-group">
      @Html.Label("Select flavor")
      @Html.DropDownList("FlavorId", ViewBag.FlavorId, "Select Flavor", new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      <input type="submit" value="Save" class="btn btn-primary" />
    </div>
  }
}

<p>@Html.ActionLink("Back to list", "Index")</p>