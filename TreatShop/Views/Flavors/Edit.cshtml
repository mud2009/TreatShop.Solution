@{
  Layout = "_Layout";
}

@model TreatShop.Models.Flavor

<h3>Edit @Html.DisplayFor(model => model.Name)'s information</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name, new {@class= "form-control", placeholder = "Name", required = "required"})
  </div>
  <div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary">
  </div>
}

<p>@Html.ActionLink("Back to list", "Index")</p>