@{
  Layout = "_Layout";
}

@model TreatShop.Models.Flavor

<h3>Add a treat for @Html.DisplayFor(model => model.Name)</h3>

@if (@ViewBag.TreatCount == 0)
{
  <h5>No treats to add for this flavor</h5>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)
    <div class="form-group">
      @Html.Label("Select treat")
      @Html.DropDownList("TreatId", ViewBag.TreatId, "Select Treat", new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      <input type="submit" value="Save" class="btn btn-primary" />
    </div>
  }
}

<p>@Html.ActionLink("Back to list", "Index")</p>