@{
  Layout = "_Layout";
}

@using TreatShop.Models

<h3>Flavors</h3>

@if (Model.Count == 0)
{
  <h4>No flavors have been added yet</h4>
}

  @foreach (Flavor flavor in Model)
  {
    <p>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</p>
  }

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>