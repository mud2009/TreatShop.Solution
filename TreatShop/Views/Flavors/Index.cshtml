@{
  Layout = "_Layout";
}

@using TreatShop.Models

<h3>Flavors</h3>

@if (Model.Count == 0)
{
  <h4>No flavors have been added yet</h4>
}

  @foreach (Flavor flavor in Model)
  {
    <h5>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</h5>
  }
@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new flavor", "Create")</p>
}